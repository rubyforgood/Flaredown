<% content_for :body do %>
<div style="width:100%;background-color:#F2EEE8;padding:50px 0;text-align:center;font-family:sans-serif;">
  <div style="background-color:#fff;border-radius:5px;padding:30px;width:80%;max-width:500px;margin: 0 auto;box-shadow: 0 4px 0 #E1D8C8;">

    <h1><%= I18n.t('checkin_reminder_mailer.subject') %></h1>

    <div class="opt_img">
      <%= image_tag attachments['optional_email_img.png'].url %>
    </div>

    <p><%= I18n.t('checkin_reminder_mailer.body.text') %></p>

    <%= link_to 'Check In Online', @click_here_link, {:style=> 'background-color:#73C1BA;color:white !important;padding:15px 25px;text-decoration:none;border-radius:4px;margin:10px;display:inline-block'} %>
    <p style="color:grey;font-size:14px;">You opted to receive daily check-in reminders in Flaredown. <a href="#" style="color:#73C1BA">Click here to turn this reminder off.</a></p>
  </div>
</div>
<% end %>
